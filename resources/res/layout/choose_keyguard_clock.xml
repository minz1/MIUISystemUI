                </LinearLayout>
                <TextView android:textSize="@dimen/choose_clock_title_text_size" android:textColor="@color/choose_keyguard_time_text_color" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/choose_clock_title_top_margin" android:layout_marginBottom="@dimen/choose_clock_title_bottom_margin" android:text="@string/choose_clock_title_middle"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/clock_layout2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginStart="14.5dp">
                <LinearLayout android:orientation="vertical" android:background="@drawable/choose_keyguard_time_item_bg" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                    <TextView android:textSize="@dimen/choose_clock_time_text_size" android:textColor="@color/choose_keyguard_time_text_color" android:layout_gravity="start" android:id="@+id/time2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/choose_clock_layout2_top_margin" android:fontFamily="miui-thin" android:layout_marginStart="@dimen/choose_clock_layout2_start_margin"/>
                    <TextView android:textSize="@dimen/choose_clock_date_text_size" android:textColor="@color/choose_keyguard_time_text_color" android:layout_gravity="start" android:id="@+id/date2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/choose_clock_layout2_start_margin"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/choose_clock_title_text_size" android:textColor="@color/choose_keyguard_time_text_color" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/choose_clock_title_top_margin" android:layout_marginBottom="@dimen/choose_clock_title_bottom_margin" android:text="@string/choose_clock_title_left_top"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/clock_layout3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginStart="14.5dp">
                <LinearLayout android:orientation="vertical" android:background="@drawable/choose_keyguard_time_item_bg" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                    <TextView android:textSize="@dimen/choose_clock_time_text_size" android:textColor="@color/choose_keyguard_time_text_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/time3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/choose_clock_layout3_top_margin" android:lineSpacingExtra="-6dp" android:fontFamily="miui-thin"/>
