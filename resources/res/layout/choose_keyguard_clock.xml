                </LinearLayout>
                <TextView android:textSize="@dimen/choose_clock_title_text_size" android:textColor="@color/choose_keyguard_time_text_color" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/choose_clock_title_top_margin" android:layout_marginBottom="@dimen/choose_clock_title_bottom_margin" android:text="@string/choose_clock_title_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
