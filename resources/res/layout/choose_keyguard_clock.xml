<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/wallpaper" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <TextureView android:id="@+id/wallpaper_textureView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/back_image" android:layout_width="@dimen/choose_clock_back_image_height" android:layout_height="@dimen/choose_clock_back_image_height" android:layout_marginTop="@dimen/choose_clock_back_image_top_margin" android:src="0x1002006e" android:scaleType="center" android:layout_marginStart="@dimen/choose_clock_back_image_start_margin"/>
    <include layout="@layout/miui_keyguard_left_top_clock"/>
