        <FrameLayout android:layout_gravity="bottom" android:id="@+id/actions_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/pip_action_size">
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/actions_group" android:layout_width="wrap_content" android:layout_height="match_parent" android:divider="@android:color/transparent" android:showDividers="middle"/>
        </FrameLayout>
    </FrameLayout>
    <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/dismiss" android:background="?android:attr/selectableItemBackgroundBorderless" android:padding="@dimen/pip_action_padding" android:layout_width="@dimen/pip_action_size" android:layout_height="@dimen/pip_action_size" android:src="@drawable/ic_close_white" android:contentDescription="@string/pip_phone_close"/>
</FrameLayout>
