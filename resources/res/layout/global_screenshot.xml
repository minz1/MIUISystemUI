<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/global_screenshot_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@android:color/black"/>
    <ImageView android:layout_gravity="center" android:id="@+id/global_screenshot" android:layout_width="wrap_content" android:layout_height="wrap_content" android:adjustViewBounds="true"/>
    <ImageView android:id="@+id/global_screenshot_flash" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@android:color/white"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/global_screenshot_mask" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/global_screenshot_mask_up" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <View android:id="@+id/global_screenshot_mask_down" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
